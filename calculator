#include <iostream>
using namespace std;

int main() {

    int a, b, w;

    cout << "What do you want to perform? (+ , - , * , / , %)\n";
    cout << "+ = 1,  - = 2,  * = 3,  / = 4,  % = 5\n";

    cin >> w;   // choice
    cin >> a;   // first number
    cin >> b;   // second number

    if (w == 1) {
        cout << a + b;
    }
    else if (w == 2) {
        cout << a - b;
    }
    else if (w == 3) {
        cout << a * b;
    }
    else if (w == 4) {
        if (b == 0)
            cout << "Division by zero not allowed!";
        else
            cout << a / b;
    }
    else if (w == 5) {
        if (b == 0)
            cout << "Modulus by zero not allowed!";
        else
            cout << a % b;
    }
    else {
        cout << "Invalid choice!";
    }

    return 0;
}
